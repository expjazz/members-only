<div class="jumbotron">
  <h1 class="display-4"><%= @post.title %></h1>
  <p class="lead">
    <%= @post.user.username if signed_in? %>
  </p>
  <hr class="my-4">
  <p><%= @post.body %></p>
  <h4>Comments</h4>
  <% comment_list(@post.comments).each do |com| %>
    <p><%=com.body%></p>
  <% end %>
  <%= form_with([model:@post, Comment.new], local: true, ) do |f|%>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_field :comment, autofocus: true, autocomplete: 'title', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'comment', class: 'btn btn-success' %>
  </div>
<% end %>
</div>