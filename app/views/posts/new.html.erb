<%= form_with model: @post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control'%>
  </div>
  <%= f.submit 'Sign in', class: "btn btn-primary" %>
<% end %>